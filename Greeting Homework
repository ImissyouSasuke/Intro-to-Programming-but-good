import java.util. Scanner;
/**
 * Christian D'Alotto here, we got a bot that greets you now
 * 
 */

public class GreetingHomework
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in); //If I don't have this the entire thing dies
        
        System.out.println("Enter your name : ");
        
        String name = in.nextLine(); //We add these to give prompts and stuff
        
        System.out.println("Enter the day : ");
        
        String day = in.nextLine();
        
        System.out.println("Enter the date : ");
        
        String date = in.nextLine(); //Next thing is the true fruits of my loins
        
        System.out.println("Hello, " + name + ", today is " + day + " and the date is " + date);
    }
}
