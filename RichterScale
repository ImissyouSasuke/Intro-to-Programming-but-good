
/**
 * Simulates a civilian warning message based on a Richter-Scale Reading
 * 
 */

public class RichterScale
{
    public static void main(String[] args)
    {
        int quakeLevel = (int) (Math.random() * 10 + 1);
        System.out.println("Attention!: Earthquake Level "+quakeLevel+" inbound");
        
        if(quakeLevel >= 9)
        {
            System.out.println("Y'all gonna die lmao");
        }
        else if(quakeLevel >= 7)
        {
            System.out.println("You might live but you're still pretty screwed");
        }
        else if(quakeLevel >= 5)
        {
            System.out.println("Say goodbye to your house because it's gonna get flubbernucked. You'll probs live tho");
        }
        else if(quakeLevel >= 3)
        {
            System.out.println("You're definitely gonna want to evacuate but you should be aight");
        }
        else if(quakeLevel >= 1)
        {
            System.out.println("Welcome to California. Run.");
        }
    }
}
