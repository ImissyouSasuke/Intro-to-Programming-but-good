import java.util.Scanner;
/**
 * We makin the quadratic formula my guy
 * 
 */

public class Quadratic
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        System.out.println("Hello user! I am here to help you calculate the quadratic formula!");
        System.out.println("Please enter a value for a : ");
        double a = in.nextDouble();
        System.out.println("Please enter a value for b : ");
        double b = in.nextDouble();
        System.out.println("Please enter a value for c ");
        double c = in.nextDouble();
        System.out.println("Your two values are : ");
        System.out.println("Positive value : " + ((-b + Math.sqrt(Math.pow(b,2) - (4*a*c)))/(2*a)));
        System.out.println("Negative value : " + ((-b - Math.sqrt(Math.pow(b,2) - (4*a*c)))/(2*a)));
    }
}
